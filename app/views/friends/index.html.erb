

<table class='table table-striped table-bordered table-hover'>
	<thead class='thead-dark'>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Twitter</th>
      <th>User_Id</th>
			<th colspan="3"></th>
		</tr>
	</thead>

<tbody>
<div id="friends">
  <% @friends.each do |friend| %>
  <% if friend.user==current_user%>
  <tr>
  	 <td>
    <%= friend.first_name %>
  </td>

  <td>
   <%= friend.last_name %>
  </td>

  <td>
     <%= friend.email %>
  </td>

  <td>
    <%= friend.phone %>
  </td>

  <td>
    <%= friend.twitter %>
  </td>

  <td>
    <%= friend.user_id%>
  </td>
 <td>
  	<%= link_to "Show", friend %>
 
  </td>
  <% if friend.user == current_user %>
  <td>
  	<%= link_to "Edit", edit_friend_path(friend) %>
  </td>

  <td>
  	<%= button_to 'Destroy', friend, method: :delete, data: {confirm: 'Are you sure?'}, class:'btn-secondary'%>
  </td>
  <%end%>
  </tr>


    
  <% end %>
  <%end%>
</div>
</tbody>
</table>
<%= link_to "New friend", new_friend_path , class:'btn-secondary' %>



